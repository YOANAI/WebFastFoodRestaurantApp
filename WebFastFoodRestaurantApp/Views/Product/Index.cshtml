@model IEnumerable<WebFastFoodRestaurantApp.Models.Product.ProductIndexVM>
@using WebFastFoodRestaurantApp.Models.Order
@{
    ViewData["Title"] = "Products";
}
<link href="~/css/Index.css" rel="stylesheet">

<h1>Products</h1>
@if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<form asp-controller="Product" asp-action="Index" method="get">
    <p>
        TypeFood: <input type="text" name="SearchStringTypeFoodName" />
        Category: <input type="text" name="SearchStringCategoryName" />

        <input type="submit" value="Filter" />
    </p>
</form>

<section class="mb-5 mt-5">
    <div class="container ">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="border  mx-3 pt-3" style="border-radius:20px">
                    <div class="col-lg-4 col-md-6 col-sm-10 offset-md-0 offset-sm-1">

                        <div class="card image">
                            <div class=" d-flex img-hover-zoom img-hover-zoom--xyz">
                                <a asp-action="Details" asp-route-id="@item.Id"><img src="@Html.DisplayFor(model => item.Picture)" alt="Image" width="180" class="center" /></a>
                            </div>
                            <div class="card-body">
                                <h5>@Html.DisplayFor(modelItem => item.ProductName) </h5>

                                <div class="d-flex flex-row my-2">
                                    <div class="text-danger">BGN @Html.DisplayFor(modelItem => item.Price)</div>
                                </div>
                                <div class="d-flex flex-row my-2">

                                    <div class="text-muted">
                                        @Html.DisplayNameFor(modelItem => item.Discount): @Html.DisplayFor(modelItem => item.Discount) %
                                    </div>
                                </div>
                                <div class="d-flex flex-row my-2">

                                    @Html.DisplayNameFor(modelItem => item.Description): @Html.DisplayFor(modelItem => item.Description)
                                </div>
                                <div class="d-flex flex-row my-2">

                                    @Html.DisplayNameFor(modelItem => item.TypeFoodName): @Html.DisplayFor(modelItem => item.TypeFoodName)
                                </div>
                                <div class="d-flex flex-row my-2">

                                    @Html.DisplayNameFor(modelItem => item.CategoryName) : @Html.DisplayFor(modelItem => item.CategoryName)
                                </div>
                                <div class="d-flex flex-row my-2">


                                    @if (this.User.Identity.IsAuthenticated)
                                    {

                                        @await Html.PartialAsync("_OrderPartialView", new OrderConfirmVM
                                        {
                                            ProductId = item.Id
                                        })}

                                </div>

                                <div>
                                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id"> Edit@*<img src="~/images/edit.png" width="25">*@</a> } @*<a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/details.png" width="40" /></a>*@
                                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                                    {

                                        <a asp-action="Delete" asp-route-id="@item.Id">| Delete @*<img src="~/images/delete.svg" width="25" />*@</a>}
                                </div>

                            </div>
                        </div>

                    </div>
                </div>}
        </div>
    </div>
</section>
